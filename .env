# ant-capsulizer/.env
# Redis (Job Queue Broker)
# ----------------------------
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# REDIS_PASSWORD=             # (optional) only if using hosted Redis

# ----------------------------
# MySQL (Capsule Database)
# ----------------------------
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=ant-capsulizer
DB_USER=root
DB_PASS=boise001

# ----------------------------
# Harvester Runtime
# ----------------------------
USER_AGENT=AgentNet-Capsulizer/1.0 (+https://agentnet.ai)
CONCURRENCY=6                     # Number of concurrent Playwright workers
PER_HOST_DELAY_MS=500             # Throttle between requests per host (ms)
MAX_CRAWL_DEPTH=1                 # Limit link traversal depth per node
TIMEOUT_MS=30000                  # Default page load timeout (ms)

# ----------------------------
# Local Asset Storage
# ----------------------------
ASSET_DIR=./assets                # HTML snapshots, logs, and exports

# ----------------------------
# Optional Cloud Storage (S3-Compatible)
# ----------------------------
# S3_BUCKET=ant-capsulizer
# S3_REGION=us-west-1
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_ENDPOINT=                    # e.g., for MinIO or Cloudflare R2

# ----------------------------
# Trust / Signing (Optional)
# ----------------------------
# TRUST_PRIVATE_KEY_PATH=./keys/trust_private.pem
# TRUST_PUBLIC_KEY_PATH=./keys/trust_public.pem
# TRUST_SIGN_ALGO=RSA-SHA256

# ----------------------------
# Logging
# ----------------------------
LOG_LEVEL=info                    # info | debug | warn | error
LOG_FILE=./logs/capsulizer.log

# ----------------------------
# Developer / Test Metadata
# ----------------------------
PROJECT_ENV=development           # development | staging | production
INSTABUILD_BATCH_SIZE=50          # how many sites to enqueue per seed run
